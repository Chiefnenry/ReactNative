{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/": ["src/*"],
      "@/components/*": ["src/components/*"],
      "@assets/*": ["assets/*"]
    },
    "allowImportingTsExtensions": true // Add this line if not already present
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
